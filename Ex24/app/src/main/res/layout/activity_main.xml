                android:text="Type" />

            <TextView
                android:id="@+id/txtMuaTM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MuaTM" />

            <TextView
                android:id="@+id/txtBanTM"
                android:layout_width="wrap_content"
